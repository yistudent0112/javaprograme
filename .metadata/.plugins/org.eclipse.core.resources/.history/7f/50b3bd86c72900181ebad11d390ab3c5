package Basical.program.set;

public class sum_6_2 {
public double f(int n,double []a,double x) {
	double number=0.0;
	if(n>a.length) {
		number=-1;
	}else {
		for(int temp=a.length;temp>0;temp--) {
			number=a[temp-1]*Math.pow(x, temp)+number;
		}
	}
	return number;
}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
      sum_6_2 a=new sum_6_2();
      double []b= new double[10];
      b={0};
      double x=2;
      int n=10;
      System.out.println(a.f(n,b,x));
	}

}
